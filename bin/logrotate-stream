#! /usr/bin/env node
/* vim: set syntax=JavaScript : */

var args = require('optimist').argv
  , stream = require('../');

args.file = args._.shift();

process.stdin
  .pipe( stream(args) )
  // attempt to write the error to the app log before dying
  .on('error', function(err) {
    require('fs').writeFileSync(args.file, err +"\n", { flag: 'a' });
    process.exit(1);
  });
